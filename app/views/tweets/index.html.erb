<h1 class='shadow-sm p-3 mb-5 bg-white rounded overflow-wrap'>Twittes Page</h1>

<div class='row'>
  <div class='col-2'>
  </div>

  <div class='col-10'>
     <%# to display all tweets %>
    <% @tweets.each do |tweet| %>
      <%= link_to tweet do %>
        <li class='list-group-item'>
            <h1>
                <span class='badge badge-pill badge-info'>
                    <%= tweet.id %>
                </span>
                    <%= tweet.twitter %>
            </h1>
            <p><%= tweet.tweet %>          Created At: <%= tweet.created_at %></p>
        </li>
      <% end %>
    <% end %>
  </div>
</div>