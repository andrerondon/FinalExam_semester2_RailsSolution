<% if @tweet.errors.present? %>
  <p>
    <%= @tweet.errors.full_messages.join(', ')%>
  </p>
<% end %>

<%# by default rails forms will submit using XHR/AJAX we'll learn this in the future but for now we want to submit using HTML5 forms so we'll have to set the `local` option to true%>
<%# https://api.rubyonrails.org/classes/ActionView/Helpers/FormHelper.html#method-i-form_with %>
<%= form_with url:"/tweets", model: @tweet, local:true do |f| %>
  <div class='form-group'>
    <%= f.label :twitter %>
    <%= f.text_field(:twitter, class: 'form-control', cols: 5, rows: 5)%>
  </div>
  <div class='form-group'>
    <%= f.label :tweet %>
    <%= f.text_field(:tweet, class: 'form-control', cols: 5, rows: 5)%>
  </div>

  <%= f.submit "Create", class: 'btn btn-primary' %>
<% end %>
